{
	"compilerOptions": {
		"noEmit": true,
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"module": "ESNext",
		"target": "ESNext",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"types": [
			"obsidian-typings",
			"bun",
			"@wdio/globals/types",
			"@wdio/mocha-framework",
			"wdio-obsidian-service",
			"mocha"
		],
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7",
			"ES2015",
			"ES2021",
			"ES2022",
			"DOM.Iterable"
		]
	},
	"include": [
		"**/*.ts",
		"wdio.conf.mts"
	]
}